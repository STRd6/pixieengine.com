%nav.top
  = button_link "Create an Animation", "film_add", new_animation_path

%section
  = render :partial => @animations

%style
  :sass
    @import partials/base
    @import util

    .animation
      +bounds(240px, 160px)
      +glass
      +inline-block

      margin: 1em
      overflow-y: auto
      padding: 1em

      .title
        a
          white-space: nowrap

      .thumb
        float: left
        margin-bottom: 1em
        margin-right: 1em

      .sprite_container
        +border-radius
        +bounds(64px)
        +contents-centered
        +inline-block

        background-color: #fff
        margin: 10px

        img
          max-height: 60px
          max-width: 60px

        .name
          text-align: center
          top: -17px
          white-space: nowrap

    .light
      .animation
        background-color: $light_highlight
