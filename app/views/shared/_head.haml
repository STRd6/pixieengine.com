%head
  %title
    - if @title
      = @title
    - else
      Pixel Editor
  %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
  %meta{ :name => "description", :content => (@meta_desc || "This free online pixel editor is amazingly simple. Build on the work of others and share your creations, or start fresh and create something new.") }
  <meta name="google-site-verification" content="0FAurYC_rgKeOIIzTKuunYVGbrc9gCI9xPClgJvN5_w" />
  <meta name="msvalidate.01" content="AA62CD2D00BD5CE103C280DD73C569C0" />
  = csrf_meta_tag
  <link href='http://fonts.googleapis.com/css?family=Josefin+Sans+Std+Light' rel='stylesheet' type='text/css'>
  <link rel="shortcut icon" href="/favicon.png" />

  = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'print.css', :media => 'print'
  = stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/themes/base/jquery-ui.css"

  = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"
  = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js"
  = javascript_include_tag 'rails', 'util', 'application', 'jquery.simplemodal-1.3.5.min', 'jquery.form.js', 'jquery.scrollTo-min', 'jquery.hotkeys', 'jquery.noselect', 'jquery.json2xml', 'jquery.live_edit', 'jquery.dropimagereader', 'jquery.property_editor', 'swfobject', 'downloadify.min'
  :javascript
    var loggedIn = #{!!current_user};
