  %script.test.template(type="text/x-jQuery-tmpl")
    :preserve
      module "${className}"

      test "testing for equality", ->
        one = 1

        # Test for equality of two objects
        equals one, 1

      test "testing boolean values", ->
        someFunction = ->
          return true

        # Test if someFunction returns true
        ok someFunction()

      # Clear out the module
      module()

  %script.entity_class.template(type="text/x-jQuery-tmpl")
    -# NOTE: The indentation of ${code} is correct, it needs to be at 0 to prevent extra spaces borking things.
    :preserve
      # HEY LISTEN!
      # This file is auto-generated, so editing it directly is a bad idea.
      # Modify the entity that generated it instead!
      ${className} = (I={}) ->
        self = ${parentClass}(I)

        Object.reverseMerge I, ${entityData}

      ${code}

        return self
