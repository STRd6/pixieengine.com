
= render partial: "shared/navigation", locals: {collection: @sprites}

%sprites
  - if @sprites.size > 0
    = render @sprites
  - else
    %h2 No results
    %a(href="#{sprites_path}") Back to Gallery

= render partial: "shared/navigation", locals: {collection: @sprites}

- content_for :javascript do
  :coffeescript
    $(window).load ->
      $("sprites").isotope
        itemSelector : 'sprite'
        layoutMode : 'masonry'
        containerStyle:
          overflow: 'visible'
          position: 'relative'
