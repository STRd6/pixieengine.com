- owner = activity.owner
- sprite = activity.trackable

.sprite_activity
  = avatar_link owner
  Created a new sprite
  .sprite_container
    = link_to image_tag(sprite.image.url, :alt => sprite.display_name, :width => sprite.width, :height => sprite.height), sprite_path(sprite)
  %p.attribution
    %span.name= link_to owner.display_name, owner
    %span.time= link_to "#{time_ago_in_words(activity.created_at)} ago", sprite
